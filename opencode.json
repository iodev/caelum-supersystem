{
  "$schema": "https://opencode.ai/config.json",
  "provider": {
    "caelum": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Caelum Agent Swarm",
      "options": {
        "baseURL": "http://10.32.3.27:8090/v1"
      },
      "models": {
        "caelum-swarm": {
          "name": "Caelum Swarm (Auto-routing)",
          "limit": {
            "context": 8192,
            "output": 4096
          }
        },
        "caelum-fast": {
          "name": "Caelum Fast (Low latency)",
          "limit": {
            "context": 4096,
            "output": 2048
          }
        },
        "caelum-quality": {
          "name": "Caelum Quality (30B models)",
          "limit": {
            "context": 16384,
            "output": 8192
          }
        },
        "llama3.1:8b": {
          "name": "Llama 3.1 8B (Local)",
          "limit": {
            "context": 8192,
            "output": 4096
          }
        }
      }
    }
  },
  "plugin": ["opencode-openai-codex-auth"],
  "mcp": {
    "weather": {
      "type": "local",
      "command": ["bun", "x", "@h1deya/mcp-server-weather"]
    },
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "caelum": {
      "type": "remote",
      "url": "http://10.32.3.27:8090/sse"
    },
    "domain-checker": {
      "type": "local",
      "command": ["node", "/home/rford/caelum/caelum-supersystem/domain-checker-mcp/index.js"]
    }
  }
}
